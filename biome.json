{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "recommended": true,
        "useSemanticElements": "off",
        "noNoninteractiveElementToInteractiveRole": "warn",
        "noNoninteractiveTabindex": "warn",
        "noRedundantRoles": "warn",
        "noAutofocus": "warn",
        "useButtonType": "error",
        "useAltText": "error",
        "useValidAnchor": "error",
        "noBlankTarget": "error",
        "useKeyWithClickEvents": "warn",
        "useKeyWithMouseEvents": "warn",
        "noAccessKey": "warn",
        "noPositiveTabindex": "error",
        "noHeaderScope": "error",
        "useValidAriaProps": "error",
        "useValidAriaValues": "error",
        "useValidAriaRole": "error",
        "noAriaUnsupportedElements": "error",
        "noAriaHiddenOnFocusable": "warn",
        "useAriaPropsForRole": "warn",
        "useAriaActivedescendantWithTabindex": "warn",
        "useMediaCaption": "warn",
        "useIframeTitle": "error",
        "noInteractiveElementToNoninteractiveRole": "warn",
        "noDistractingElements": "error",
        "useFocusableInteractive": "warn",
        "noSvgWithoutTitle": "warn",
        "noLabelWithoutControl": "warn"
      },
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": "error",
        "useExhaustiveDependencies": "error"
      },
      "style": {
        "noNonNullAssertion": "error",
        "useConst": "error"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noExplicitAny": "error",
        "noImplicitAnyLet": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5"
    }
  },
  "files": {
    "ignore": [
      "node_modules",
      "dist",
      "build",
      ".cache",
      "target",
      "coverage",
      "src-tauri/gen",
      "src-tauri/target",
      "packages/generated/types.ts",
      "src/routeTree.gen.ts",
      "storybook-static"
    ]
  },
  "overrides": [
    {
      "include": ["**/*.stories.tsx", "**/*.stories.ts"],
      "linter": {
        "rules": {
          "a11y": {
            "noLabelWithoutControl": "off",
            "useButtonType": "warn",
            "noAriaHiddenOnFocusable": "warn"
          },
          "style": {
            "noNonNullAssertion": "warn"
          },
          "complexity": {
            "noForEach": "off"
          },
          "correctness": {
            "noUnusedVariables": "warn"
          }
        }
      }
    },
    {
      "include": ["**/*.test.ts", "**/*.test.tsx", "**/tests/**/*.ts"],
      "linter": {
        "rules": {
          "complexity": {
            "noForEach": "off"
          },
          "suspicious": {
            "noExplicitAny": "off"
          },
          "style": {
            "noNonNullAssertion": "off"
          }
        }
      }
    },
    {
      "include": ["scripts/generate-*.ts", "scripts/validate-*.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noAssignInExpressions": "off",
            "noImplicitAnyLet": "off"
          }
        }
      }
    }
  ]
}
